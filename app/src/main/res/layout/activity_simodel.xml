<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#950E79FB"
    tools:context=".SimodelActivity">

    <EditText
        android:id="@+id/pH"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Input pH : 3 - 9.5"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Temprature"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Input Temprature: 34' - 90'"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/pH"
        app:layout_constraintStart_toStartOf="@+id/pH"
        app:layout_constraintTop_toBottomOf="@+id/pH" />

    <EditText
        android:id="@+id/Taste"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Input Taste: 1 (baik), 0 (buruk)"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/Temprature"
        app:layout_constraintStart_toStartOf="@+id/Temprature"
        app:layout_constraintTop_toBottomOf="@+id/Temprature" />

    <EditText
        android:id="@+id/Odor"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Input Odor: 1 (baik), 0 (buruk)"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/Taste"
        app:layout_constraintStart_toStartOf="@+id/Taste"
        app:layout_constraintTop_toBottomOf="@+id/Taste" />

    <EditText
        android:id="@+id/Fat"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Input Fat : 1 (tinggi), 0 (rendah)"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/Odor"
        app:layout_constraintStart_toStartOf="@+id/Odor"
        app:layout_constraintTop_toBottomOf="@+id/Odor" />

    <EditText
        android:id="@+id/Turbidity"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Input Turbidity: 1 (tinggi), 0 (rendah)"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/Fat"
        app:layout_constraintStart_toStartOf="@+id/Fat"
        app:layout_constraintTop_toBottomOf="@+id/Fat" />

    <EditText
        android:id="@+id/Colour"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Input Colour: 240 - 255"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/Turbidity"
        app:layout_constraintStart_toStartOf="@+id/Turbidity"
        app:layout_constraintTop_toBottomOf="@+id/Turbidity" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Prediksi"
        android:textColor="@color/bone"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Colour"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/Colour"
        app:layout_constraintTop_toBottomOf="@+id/Colour"
        app:layout_constraintVertical_bias="0.079" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/btnCheck"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/btnCheck"
        app:layout_constraintTop_toBottomOf="@+id/btnCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>